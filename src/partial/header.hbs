<header class="row">
  <div class="panel">
    <div class="upload-container">
      <form id="my-awesome-dropzone" action="/target" class="dropzone"></form>
    </div>
    <br>
    <form role="form">
      <label for="project-title">Title</label>
      <input type="text" name="title" placeholder="Name of the SLM Technology" autofocus>
      <label for="project-title">Country</label>
      <input type="text" list="countries" name="country" placeholder="Location of the SLM Technology">
      <datalist id="countries">
          <option value="France">France</option>
          <option value="Germany">Germany</option>
          <option value="India">India</option>
          <option value="Kenya">Kenya</option>
          <option value="United States">United States</option>
          <option value="United Kingdom">United Kingdom</option>
      </datalist>
      <label for="project-title">Definition</label>
      <textarea name="abstract" type="text" placeholder="Definition of Technology in one sentance" class="big"></textarea>
      <a href="complete.html" class="button postfix">save</a>
    </form>
  </div>
</header>